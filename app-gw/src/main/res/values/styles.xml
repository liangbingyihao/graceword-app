    <style name="InconspicuousClickableText">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- 正按钮样式 -->
        <item name="materialButtonStyle">@style/PositiveButtonStyle</item>
        <!-- 负按钮样式 -->
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/item_text_selected</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/item_text_normal</item>
        <item name="rippleColor">@color/item_text_normal</item>
    </style>

    <style name="FullScreenDialog" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="FullRoundButton" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item> <!-- 关键：使用百分比 -->
    </style>


    <style name="LangSettingButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/item_text_normal</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:button">@drawable/radio_button_selector</item>
    </style>

    <style name="RoundedDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <!-- 圆角配置 -->
        <item name="shapeAppearanceOverlay">@style/RoundedDialogShape</item>

        <!-- 按钮颜色配置 -->
        <item name="colorPrimary">@color/item_text_selected</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>

<!--        &lt;!&ndash; 取消按钮颜色 &ndash;&gt;-->
<!--        <item name="colorError">@color/your_cancel_color</item>-->
<!--        <item name="colorOnError">@color/on_error_color</item>-->

        <!-- 确保背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- 圆角形状定义 -->
    <style name="RoundedDialogShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>


    <style name="ImagePopupAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

