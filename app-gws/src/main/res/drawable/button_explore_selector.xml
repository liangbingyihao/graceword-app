<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 按下状态 -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#ff0000" /> <!-- 按下时的背景色 -->
            <stroke
                android:width="1dp"
                android:color="#D0D0D0" /> <!-- 按下时的边框色 -->
            <corners android:radius="10dp" />
        </shape>
    </item>
    <!-- 默认状态 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- 默认背景色 -->
            <stroke
                android:width="1dp"
                android:color="#E7E7E7" /> <!-- 默认边框色 -->
            <corners android:radius="10dp" />
        </shape>
    </item>
</selector>