<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/arrow_top"
        android:layout_width="16dp"
        android:layout_height="8dp"
        android:layout_gravity="center_horizontal|bottom"
        android:src="@drawable/ic_arrow_up" />

    <androidx.cardview.widget.CardView
        android:id="@+id/menu_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        app:cardBackgroundColor="#6E6E6E"
        app:cardCornerRadius="12dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/copy"
                style="@style/PopupmenuText"
                android:text="@string/copy"
                app:drawableEndCompat="@mipmap/ic_copy" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#7B7B7B" />
            <TextView
                android:id="@+id/changeTopic"
                style="@style/PopupmenuText"
                android:text="@string/change_topic"
                app:drawableEndCompat="@mipmap/ic_switch" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#7B7B7B" />
            <TextView
                android:id="@+id/delArticle"
                style="@style/PopupmenuText"
                android:text="@string/remove"
                app:drawableEndCompat="@mipmap/ic_del" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/arrow_bottom"
        android:layout_width="16dp"
        android:layout_height="8dp"
        android:layout_gravity="center_horizontal|bottom"
        android:src="@drawable/ic_arrow_down" />
</LinearLayout>