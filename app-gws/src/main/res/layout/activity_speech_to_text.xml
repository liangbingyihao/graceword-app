<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:padding="16dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Debug"
            android:textColor="@color/item_text_normal"
            android:textSize="16sp"
            android:textStyle="bold" />
    </FrameLayout>

    <TextView
        android:id="@+id/ttsparams"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="豆包音色:"
        android:textSize="14sp" />

    <Spinner
        android:id="@+id/ttsVoiceTypeSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/ttserror"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp" />

    <Button
        android:id="@+id/updateToken"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="更新推送token" />

    <Button
        android:id="@+id/clearCache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="清缓存" />

    <Button
        android:id="@+id/setPrompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="自定义AI提示语" />


    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="点击下方按钮开始语音识别"
        android:textSize="14sp" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="开始录音" />

    <Button
        android:id="@+id/stopButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="停止录音" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/taskIndex"
            android:layout_width="170dp"
            android:layout_height="80dp"
            android:digits="0123456789"
            android:hint="(0-7)"
            android:inputType="number" />

        <Button
            android:id="@+id/setTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="已完成打卡次数(0-7)" />
    </LinearLayout>
    <Button
        android:id="@+id/getLog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="拷贝日志" />


